{
  "name": "mudslide",
  "version": "0.18.0",
  "author": "robvanderleek@gmail.com",
  "description": "WhatsApp CLI",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ]
    ]
  },
  "bin": {
    "mudslide": "dist/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && chmod a+x ./dist/index.js",
    "test": "jest",
    "start": "yarn build && node ./dist/index.js",
    "dist:build": "ncc build dist/index.js -o dist-ncc",
    "dist:pkg:linux": "pkg -t node16-linuxstatic-x64,node16-linuxstatic-arm64 -o mudslide-linuxstatic dist-ncc/index.js",
    "dist:pkg:windows": "pkg -t node16-win-x64 -o mudslide-win-x64 dist-ncc/index.js",
    "dist:pkg:macos": "pkg -t node16-macos-arm64 -o mudslide-macos dist-ncc/index.js",
    "dist:bundle": "tar czf mudslide-linuxstatic-x64.tgz mudslide"
  },
  "license": "ISC",
  "dependencies": {
    "@adiwajshing/keyed-db": "^0.2.4",
    "@hapi/boom": "^10.0.0",
    "@whiskeysockets/baileys": "^6.2.1",
    "commander": "^9.4.1",
    "global-agent": "^3.0.0",
    "mime": "^3.0.0",
    "pino": "^8.7.0",
    "qrcode-terminal": "^0.12.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/global-agent": "^2.1.1",
    "@types/jest": "^29.4.0",
    "@types/mime": "^3.0.1",
    "@types/node": "^18.11.10",
    "@types/pino": "^7.0.5",
    "@types/signale": "^1.4.4",
    "@vercel/ncc": "^0.34.0",
    "jest": "^29.4.2",
    "pkg": "^5.8.0",
    "semantic-release": "^20.0.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.3"
  }
}
